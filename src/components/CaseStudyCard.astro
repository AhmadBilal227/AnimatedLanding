---
import { Card, CardContent } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";

const { project, color } = Astro.props;
const projectUrl = project.caseStudy ? `/portfolio/${project.type}-${project.id}` : '#';
const imageUrl = project.heroImage || project.imageUrl;
---

<a href={projectUrl} class="group block">
  <Card className={`border-2 ${color} overflow-hidden transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 group-hover:scale-[1.02]`}>
    <div class="aspect-video bg-gray-200 overflow-hidden">
      <img src={imageUrl} alt={project.title} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"/>
    </div>
    <CardContent className="p-6">
      <h3 class="font-sans font-bold text-xl text-gray-900 group-hover:text-brand-purple transition-colors">{project.title}</h3>
      <p class="text-gray-500 mt-1">{project.client || 'Personal Project'}</p>
      {project.award && (
        <Badge className="mt-4 bg-yellow-100 text-yellow-800 hover:bg-yellow-200">
          {project.award}
        </Badge>
      )}
    </CardContent>
  </Card>
</a>
