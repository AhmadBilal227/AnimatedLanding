---
import { Button } from "@/components/ui/button";
import GooeyNavFooter from './GooeyNavFooter';
---

<footer class="bg-white py-16 md:py-24 border-t border-gray-200">
  <div class="container mx-auto px-4 text-center">
    <Button 
      asChild 
      className="bg-brand-green text-white font-script text-4xl px-6 py-3 rounded-lg hover:bg-brand-green/90 transition-all duration-300 hover:scale-105 border-0"
      size="lg"
    >
      <a href="/">Greater</a>
    </Button>
    <p class="text-4xl md:text-6xl font-sans font-bold text-gray-900 mt-8">Make good trouble.</p>

    <div class="mt-12">
      <GooeyNavFooter client:only="react" />
    </div>
  </div>
</footer>
