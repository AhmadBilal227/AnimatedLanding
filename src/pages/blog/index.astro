---
import { getCollection } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<MainLayout title="Blog | A Creative Portfolio">
    <section class="text-center my-16">
        <h1 class="text-6xl font-serif font-bold">Blog</h1>
        <p class="text-xl text-gray-500 mt-2">Thoughts on creative work, technology, and everything in between.</p>
    </section>

    <section class="max-w-3xl mx-auto">
        <div class="border-t border-gray-200">
            {posts.map(post => (
                <a href={`/blog/${post.slug}/`} class="block border-b border-gray-200 py-8 hover:bg-gray-50 transition-colors">
                    <p class="text-gray-500 mb-2">{new Date(post.data.pubDate).toLocaleDateString('en-us', { year: 'numeric', month: 'short', day: 'numeric' })}</p>
                    <h2 class="text-4xl font-serif font-bold mb-4">{post.data.title}</h2>
                    <p class="text-lg text-gray-700">{post.data.description}</p>
                </a>
            ))}
        </div>
    </section>
</MainLayout>
